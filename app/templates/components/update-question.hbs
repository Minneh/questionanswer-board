{{!-- toggle form display using updateQuestionForm --}}

{{#if updateQuestionForm}}
<h4>Update {{question.author}}'s question</h4>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
    </div>
    <div class="form-group">
      <label for="body">Body</label>
        {{input value=body id="body" placeholder=question.body}}
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
        {{input value=notes id="notes" placeholder=question.notes}}
    </div>
    <button class="btn btn-primary" {{action 'update' question}}>Save Question</button>
  </form>
</div>
{{else}}
  <button class="btn btn-default" {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}

{{!-- set a property, addNewQuestion to true or false. When true, the form will show. When false, the button will show --}}

{{#if addNewQuestion}}
<h2>New Question</h2>
<div>
  <form>
    <div class="form-group">
      <label for="author">Name</label>
      {{!-- input helper for form inputs --}}
        {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="body">Body</label>
        {{input value=body id="body"}}
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
        {{input value=notes id="notes"}}
    </div>
    {{!-- submit button has the saveQuestion1 action attached to begin the process of saving the new question added by a user. --}}
    <button class="btn btn-primary" {{action 'saveQuestion1'}}>Save Question</button>
  </form>
</div>
{{else}}
  <button class="btn btn-default" {{action 'questionFormShow'}}>Add New Question</button>
{{/if}}

{{#if addNewQuestion}}
<h2>New Question</h2>
<div>
  <form>
    <div class="form-group">
      <label for="author">Name</label>
        {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="body">Body</label>
        {{input value=body id="body"}}
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
        {{input value=notes id="notes"}}
    </div>
    <button class="btn btn-primary" {{action 'saveQuestion1'}}>Save Question</button>
  </form>
</div>
{{else}}
  <button class="btn btn-default" {{action 'questionFormShow'}}>Add New Question</button>
{{/if}}
